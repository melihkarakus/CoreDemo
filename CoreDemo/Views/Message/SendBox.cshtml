@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Konu</td>
        <td>Alıcı</td>
        <td>Tarih</td>
        <td>Mesajı Aç</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-mmm-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı aç</td>
        </tr>
    }
</table>
<a href="/Message/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur</a>

